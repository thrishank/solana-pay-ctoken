generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CreateToken {
  id        String @id @default(cuid())
  tokenName String
  symbol    String
  url       String
  decimals  Int
}

model Mint {
  id        String @id @default(cuid())
  recipient String
  amount    Int
  mint      String
}

model Transfer {
  id        String @id @default(cuid())
  recipient String
  amount    Int
  mint      String
}

model Claim {
  id     String @id @default(cuid())
  mint   String
  amount Int
}
